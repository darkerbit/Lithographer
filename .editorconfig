# Generic template because I got tired of writing these files

root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

[*.{c,h,cpp,hpp,cs,vert,frag,fx,fxh}]
indent_style = tab
indent_size = 4

[CMakeLists.txt]
indent_style = tab
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 8

[*.{csproj,xml,targets,sln,config}]
indent_style = tab
indent_size = 4

[*.{lua,json}]
indent_style = space
indent_size = 2
